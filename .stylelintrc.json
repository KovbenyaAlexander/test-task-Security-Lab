{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "indentation": 2,
    "number-leading-zero": "always",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "theme",
          "custom-variant"
        ]
      }
    ],
    "string-quotes": "double"
  }
}